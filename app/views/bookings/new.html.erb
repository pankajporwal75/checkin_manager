<div class="page-header">
  <h2>New Check-In</h2>
</div>
<div class="booking-form">
  <%= form_for(@booking, html: { class: "needs-validation" }) do |f| %>
  <% if @booking.errors.any? %>
    <div class="alert alert-danger">
      <h6>Please fix these errors:</h6>
      <ul>
        <% @booking.errors.full_messages.each do |message| %>
          <li>
            <p><%= message %></p>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :in_date, 'Check-In Date', class: "form-label" %>
        <%= f.text_field :in_date, class: "form-control datepicker", :'data-provide' => 'datepicker', autofocus: true %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :in_time, 'Check-In Time', class: "form-label" %>
        <%= f.text_field :in_time, class: "form-control timepicker", autofocus: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :out_date, 'Check-Out Date', class: "form-label" %>
        <%= f.text_field :out_date, class: "form-control datepicker", autofocus: true %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :out_time, 'Check-Out Time', class: "form-label" %>
        <%= f.text_field :out_time, class: "form-control timepicker", autofocus: true %>
      </div>
    </div>
  </div>
  <div class="">
    <%= f.submit 'Check Availability', class: "btn btn-primary" %>
  </div>
<% end %>
</div>