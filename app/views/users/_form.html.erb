<%= form_for @user, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :hotel_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :hotel_name, class: "form-control", placeholder: "Enter hotel name" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :mobile_number, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :mobile_number, class: "form-control", placeholder: "Enter mobile number" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit nil, class: "form-submit d-none" %>
    </div>
  </div>
<% end %>
