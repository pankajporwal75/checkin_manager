<div class="d-flex">
  <div class="float-left">
    <h1>Room Categories</h1>
  </div>
  <div class="float-right">
    <%= link_to "New category", new_category_path, class: "btn btn-primary float-right", remote: true %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <div id="categories">
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td>
            <%= link_to "Edit", edit_category_path(category), class: 'btn btn-outline-dark btn-sm', remote: true %>
            <%= link_to "Delete", category_path(category), data: {confirm: 'Are you sure?'}, method: :delete, class: 'btn btn-outline-danger btn-sm' %></td>
        </tr>
      <% end %>
    </div>
  </tbody>
</table>